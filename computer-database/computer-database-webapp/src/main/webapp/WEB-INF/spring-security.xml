<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">
 

	<http auto-config="true">
		<!-- ERROR PAGE FOR ACCESS DENIED -->
		<access-denied-handler error-page="/WEB-INF/403.jsp" />
		
		<intercept-url pattern="/PageDelete**" access="ROLE_ADMIN" />
		<intercept-url pattern="/PageUpdate**" access="ROLE_ADMIN" /> 
		<intercept-url pattern="/PageAjout**" access="ROLE_ADMIN" />
		
		<!-- FOR LOGOUT -->
		<logout logout-success-url="/index.jsp" />
	</http>
 
	<authentication-manager>
	  <authentication-provider>
	    <user-service>
			<user name="john" password="password" authorities="ROLE_USER" />
			<user name="admin" password="admin" authorities="ROLE_ADMIN" />
	    </user-service>
	  </authentication-provider>
	</authentication-manager>
 
</beans:beans>